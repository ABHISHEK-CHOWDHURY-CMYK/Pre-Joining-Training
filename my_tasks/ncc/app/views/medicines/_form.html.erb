<%= render 'shared/errors', object: @medicine %>

<div class='row'>           
	<div class='col-xs-12'>

		<%= form_for(@medicine, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :title %>
				</div>

				<div class="col-sm-5">
				<%= f.text_field :title, class: "form-control", placeholder: "Enter title of medicine", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :description %>
				</div>
				<div class="col-sm-5">
				<%= f.text_area :description, class: "form-control", placeholder: "Enter some description of the medicine", autofocus: true %>
				</div>
			</div>	

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :company %>
				</div>

				<div class="col-sm-5">
				<%= f.text_field :company, class: "form-control", placeholder: "Enter company of medicine", autofocus: true %>
				</div>
			</div>
			
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :batch_number %>
				</div>

				<div class="col-sm-5">
				<%= f.text_field :batch_number, class: "form-control", placeholder: "Enter the batch_number of the medicine", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :manufacturing_date %>
				</div>

				<div class="col-sm-5">
				<%= f.text_field :manufacturing_date, class: "form-control", placeholder: "Enter the manufacturing date of the medicine", autofocus: true %>
				</div>
			</div>

			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :expiry_date %>
				</div>

				<div class="col-sm-5">
				<%= f.text_field :expiry_date, class: "form-control", placeholder: "Enter the expiry date of the medicine", autofocus: true %>
				</div>
			</div>
				
			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: 'btn btn-primary btn-lg' %>
				</div>
			</div>
		
		<% end %>

		<div class="col-xs-4 col-xs-offset-4" >
			[ <%= link_to "Cancel request and return to medicines listing page", medicines_path %> ]
		</div>
	
	</div>
</div>