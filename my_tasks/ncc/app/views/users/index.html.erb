<h1 align="center" style="color:white;" > ALL MEDISERV USERS </h1>
<body style=" background-image: url('/assets/s.jpg'); background-size: cover;">

<div class="center">
	<% @users.each do |user| %>
		<ul class="listing">
			<div class="row">
				<div class="well col-md-4 col-md-offset-4">
					<li> <%= link_to gravatar_for(user), user_path(user) %></li>
						<li class="medicine-title">
							<%= link_to user.username, user_path(user) %>
						</li>
						<li><small> <%= pluralize(user.medicines.count, "medicine") if user.medicines %> </small></li>
					</div>
				</div>
			</ul>
	<% end %>
</div>